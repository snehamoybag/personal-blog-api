generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int    @id @default(autoincrement())
  email        String @unique
  passwordHash String
  role         Role   @default(NORMAL)

  // although its set to optional, make sure to create a profile when creating a new user
  profile Profile?

  writtenBlogs Blog[] @relation("writtenBlog")

  writtenComments Comment[] @relation("writtenComment")

  images Image[]

  @@index(email)
}

// WARINING: make sure to create a profile and connect it to the user on new account creation
model Profile {
  id        Int      @id @default(autoincrement())
  firstName String   @db.VarChar(35)
  lastName  String   @db.VarChar(35)
  bio       String?  @db.VarChar(255)
  joinedAt  DateTime @default(now())

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique

  avatarUrl String? @unique
}

model Blog {
  id        Int        @id @default(autoincrement())
  title     String     @db.VarChar(120)
  content   String
  status    BlogStatus
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt()

  converImgUrl String

  tags Tag[]

  author   User @relation("writtenBlog", fields: [authorId], references: [id])
  authorId Int

  comments Comment[]
}

model Tag {
  id   Int    @id @default(autoincrement())
  name String @unique

  blogs Blog[]

  @@index(name)
}

model Comment {
  id        Int      @id @default(autoincrement())
  message   String   @db.VarChar(255)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  author   User @relation("writtenComment", fields: [authorId], references: [id])
  authorId Int

  blog   Blog @relation(fields: [blogId], references: [id])
  blogId Int
}

// alll the images of the user
model Image {
  id           Int      @id @default(autoincrement())
  publicId     String   @unique // the cloud id
  url          String   @unique
  originalName String
  mimeType     String
  size         Int // in bytes
  createdAt    DateTime @default(now())

  user   User @relation(fields: [userId], references: [id])
  userId Int

  @@index(url)
}

enum Role {
  ADMIN
  MODERATOR
  NORMAL
}

enum BlogStatus {
  DRAFT
  PUBLISHED
}
